{
  "$schema": "https://raw.githubusercontent.com/nicklasxyz/tauri-v2-schema/main/schema.json",
  "productName": "Whispr",
  "version": "1.0.0",
  "identifier": "bz.puny.whispr",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Whispr",
        "label": "main",
        "width": 960,
        "height": 680,
        "minWidth": 720,
        "minHeight": 480,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Whispr"
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "global-shortcut": {}
  }
}
